include /components/button/btn-default
include /components/background/bg-finish
include /components/block/b-design

mixin b-finish({ isHide, className })
  .b-first(hidden=isHide class=className)
    - let onclick = "this.classList.toggle('actv')"
    +bg-finish({})
    .b-first__content
      +b-design({})

      +btn-default({
        text: "Назад",
        color: "black",
        className: "b-first__btn-prev"
      })
      +btn-default({
        text: "Сохранить дизайн",
        className: "b-first__btn-next finish"
      })
