include /components/button/btn
include /components/background/bg-third
include /components/block/b-window

mixin b-third({ isHide, className })
  .b-set(hidden=isHide class=className)
    +bg-third({})
    .b-set__content
      .b-set__left
        .b-set__step 3
        .b-set__wrp
          .b-set__title Покрытие крюка
          .b-set__color.red Глянцевое
      +b-window({ step: 3, className: "b-set__window" })
      +btn({
        text: "Назад",
        color: "black",
        className: "b-set__btn-prev"
      })
      +btn({
        text: "Далее",
        className: "b-set__btn-next"
      })
