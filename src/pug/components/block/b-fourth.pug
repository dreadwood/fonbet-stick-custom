include /components/button/btn
include /components/background/bg-fourth
include /components/block/b-name
include /components/block/b-window

mixin b-fourth({ isHide, className })
  .b-set(hidden=isHide class=className)
    +bg-fourth({})
    .b-set__content
      .b-set__left
        .b-set__step 4
        .b-set__wrp
          .b-set__title Персонализация
          +b-name({ className: "b-set__name" })
      +b-window({ step: 4, className: "b-set__window" })
      +btn({
        text: "Назад",
        color: "black",
        className: "b-set__btn-prev"
      })
      +btn({
        text: "Далее",
        className: "b-set__btn-next"
      })
