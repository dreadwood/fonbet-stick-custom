extends /elements/layout-index

block data
  -
    title = "Template"

    let pages = [
      { name: "App", url: "app-page.html" },
      { name: "Start", url: "start-page.html" },
      { name: "Step First", url: "step-first-page.html" },
      { name: "Step Second", url: "step-second-page.html" },
      { name: "Step Third", url: "step-third-page.html" },
      { name: "Step Fourth", url: "step-fourth-page.html" },
      { name: "Step Fifth", url: "step-fifth-page.html" },
      { name: "Finish", url: "finish-page.html" },
      { name: "Customizer", url: "customizer-page.html" },
      { name: "Modal Score", url: "modal-score-page.html" },
      { name: "Modal Share", url: "modal-share-page.html" },
      { name: "Modal Bet", url: "modal-bet-page.html" },
      { name: "Modal Auth", url: "modal-auth-page.html" },
    ]


block content
  mixin page-list({ list })
    ul
      each it in list
        li
          a(href=it.url) #{it.url} ---- #{it.name}
  style.
    body {
      --color-main: #e80024;
      --color-bg: #ffffff;
      --color-text: #4d5156;
      padding: 20px 40px;
      font-family: sans-serif;
      font-size: 16px;
      line-height: 22px;
      font-weight: 400;
      color: var(--color-text);
      background-color: var(--color-bg);
    }
    h1 {
      color: var(--color-main);
    }
    ul,
    ol {
      margin-top: 0;
    }
    li {
      margin-bottom: 10px;
    }
    a {
      color: inherit;
      text-decoration: none;
    }
    a:visited {
      color: var(--color-text);
    }
    a:hover,
    a:focus {
      color: var(--color-main);
    }

  h1= title

  h2 Pages
  +page-list({list: pages})
